@model ForgetPasswordViewModel
@{
    ViewData["Title"] = "ForgotPassword";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="col-md-6 col-lg-5">
	<div class="login-wrap p-4 p-md-5">
		<div class="icon d-flex align-items-center justify-content-center">
			<span class="fa fa-user-o"></span>
		</div>
		<form asp-action="SendEmail" class="login-form">
			<div class="form-group">
				<input asp-for="Email" class="form-control rounded-left" placeholder="Email" required>
			</div>
			<div asp-validation-summary="All"></div>
			<div class="form-group">
				<button type="submit" class="btn btn-primary rounded submit p-3 px-5">Reset Password</button>
			</div>
		</form> 
	</div>
</div>

@section ValidationScriptSection {
	<partial name="_ValidationScriptsPartial" />
}