@model RegisterViewModel
@{
	ViewData["Title"] = "Register";
	Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="col-md-6 col-lg-5">
	<div class="login-wrap p-4 p-md-5">
		<div class="icon d-flex align-items-center justify-content-center">
			<span class="fa fa-user-o"></span>
		</div>
		<h3 class="text-center mb-4">Have an account? <a asp-action="Login">Login Now!</a></h3>
		<form asp-action="Register" class="login-form">
			
			<div class="form-group">
				<input class="form-control rounded-left" asp-for="FName" placeholder="Your First Name" />
				<span asp-validation-for="FName"></span>
			</div>
			<div class="form-group">
				<input class="form-control rounded-left" asp-for="LName" placeholder="Your Last Name" />
				<span asp-validation-for="LName"></span>
			</div>
			<div class="form-group">
				<input class="form-control rounded-left" asp-for="Email" placeholder="Your Email" />
				<span asp-validation-for="Email"></span>
			</div>
			<div class="form-group">
				<input class="form-control rounded-left" asp-for="Password" placeholder="Your Password" />
				<span asp-validation-for="Password"></span>
			</div>
			<div class="form-group">
				<input class="form-control rounded-left" asp-for="ConfirmPassword" placeholder="Confirm Password" />
				<span asp-validation-for="ConfirmPassword"></span>
			</div>
			<div class="form-group d-md-flex">
				<div class="w-80">
					<label class="checkbox-wrap checkbox-primary">
						I agree to the terms and conditions
						<input asp-for="IsAgree" type="checkbox" checked="">
						<span class="checkmark"></span>
					</label>
				</div>
			</div>
			<div asp-validation-summary="ModelOnly"></div>
			<div class="form-group">
				<button type="submit" class="btn btn-primary rounded submit p-3 px-5">Register</button>
			</div>
		</form>
		
	</div>
</div>

@section ValidationScriptSection {
	<partial name="_ValidationScriptsPartial" />
}