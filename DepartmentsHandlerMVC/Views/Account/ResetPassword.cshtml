@model ResetPasswordViewModel
@{
    ViewData["Title"] = "Reset Password";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}


<div class="col-md-6 col-lg-5">
	<div class="login-wrap p-4 p-md-5">
		<div class="icon d-flex align-items-center justify-content-center">
			<span class="fa fa-user-o"></span>
		</div>
		<h3 class="text-center mb-4">Have an account?</h3>
		<form asp-action="ResetPassword" class="login-form">
			<div class="form-group d-flex">
				<input asp-for="Password" class="form-control rounded-left" placeholder="New Password" required>
				<span asp-validation-for="Password"></span>
			</div>
			<div class="form-group">
				<input asp-for="ConfirmPassword" class="form-control rounded-left" placeholder="Confirm New Password" required>
				<span asp-validation-for="ConfirmPassword"></span>
			</div>
			<div asp-validation-summary="All"></div>
			<div class="form-group">
				<button type="submit" class="btn btn-primary rounded submit p-3 px-5">Reset</button>
			</div>
		</form>
	</div>
</div>

@section ValidationScriptSection {
	<partial name="_ValidationScriptsPartial" />
}