@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="col-md-6 col-lg-5">
	<div class="login-wrap p-4 p-md-5">
		<div class="icon d-flex align-items-center justify-content-center">
			<span class="fa fa-user-o"></span>
		</div>
		
		<form asp-action="Login" class="login-form">
			<div class="form-group">
				<input asp-for="Email" class="form-control rounded-left" placeholder="Email" required>
			</div>
			<div class="form-group d-flex">
				<input asp-for="Password" type="password" class="form-control rounded-left" placeholder="Password" required>
			</div>
			<div class="form-group d-md-flex">
				<div class="w-50">
					<label class="checkbox-wrap checkbox-primary">
						Remember Me
						<input asp-for="RememberMe" type="checkbox">
						<span class="checkmark"></span>
					</label>
				</div>
				<div class="w-50 text-md-right">
					<a asp-action="ForgetPassword">Forgot Password</a>
				</div>
			</div>
			<div asp-validation-summary="All"></div>
			<h3 class="text-center mb-4">Don't Have an account?<a asp-action="Register"> Register Now!</a></h3>
			<div class="form-group">
				<button type="submit" class="btn btn-primary rounded submit p-3 px-5">Login</button>
			</div>
		</form>
	</div>
</div>

@section ValidationScriptSection {
	<partial name="_ValidationScriptsPartial" />
}