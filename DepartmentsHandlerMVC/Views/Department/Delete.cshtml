@model Department
@{
	ViewData["Title"] = "Details";
}

<h1>@Model.Name Department Delete</h1>
<br />

<div>
	<div class="form-group">
		<label asp-for="Name" class="col-form-label"></label>
		<input asp-for="Name" class="form-control" readonly />
	</div>
	<div class="form-group">
		<label asp-for="Code" class="col-form-label"></label>
		<input asp-for="Code" class="form-control" readonly />
	</div>
	<div class="form-group">
		<label asp-for="DateOfCreation" class="col-form-label"></label>
		<input asp-for="DateOfCreation" class="form-control" readonly />
	</div>
	<form asp-action="Delete">
		<input type="submit" value="Delete" asp-action="Delete" class="btn btn-danger" />
		<a asp-action="Index" class="btn btn-light">Back To List</a>
	</form>
</div>