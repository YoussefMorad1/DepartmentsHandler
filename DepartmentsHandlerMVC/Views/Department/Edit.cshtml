@model Department
@{
    ViewData["Title"] = "Edit";
}

<h1>@Model.Name Department Edit</h1>
<br />

<form asp-action="Edit">
    <div class="form-group">
        <label asp-for="Name" class="col-form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="alert-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Code" class="col-form-label"></label>
        <input asp-for="Code" class="form-control" />
        <span asp-validation-for="Code" class="alert-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DateOfCreation" class="col-form-label"></label>
        <input asp-for="DateOfCreation" class="form-control" />
        <span asp-validation-for="DateOfCreation" class="alert-danger"></span>
    </div>
    <input type="submit" value="Save" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success">
    <a asp-action="Index" class="btn btn-light">Cancel</a>
</form>
