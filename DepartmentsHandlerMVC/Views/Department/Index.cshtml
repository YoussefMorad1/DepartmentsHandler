@model IEnumerable<Department>
@{
	ViewData["Title"] = "All Departments";
}

<h1>All Departments</h1>
<br />
@if (Model.Count() > 0)
{
	<table class="table table-striped table-hover mt-5">
		<thead>
			<tr>
				<td>@Html.DisplayNameFor(d => d.Code)</td>
				<td>@Html.DisplayNameFor(d => d.Name)</td>
				<td>@Html.DisplayNameFor(d => d.DateOfCreation)</td>
				<td>Details</td>
				<td>Update</td>
				<td>Delete</td>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>@Html.DisplayFor(d => item.Code)</td>
					<td>@Html.DisplayFor(d => item.Name)</td>
					<td>@Html.DisplayFor(d => item.DateOfCreation)</td>
					<td>
						<a asp-controller="Department" asp-action="Details" asp-route-id="@item.Id" class="btn btn-warning">
							<i class="fas fa-eye"></i> Details
						</a>
					</td>
					<td>
						<a asp-controller="Department" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success">
							<i class="fas fa-edit"></i> Edit
						</a>
						</td>
					<td>
						<a asp-controller="Department" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">
							<i class="fas fa-trash"></i> Delete
						</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
}
else
{
	<div class="mt-5 alert alert-warning">
		<h3>There are No Department, yet ;)</h3>
	</div>
}
